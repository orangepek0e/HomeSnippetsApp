<html ng-app="HomeSnippets">
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="/node_modules/angular/angular.js"></script>

    <!-- App.js & Controllers -->
    <script src="/static/scripts/app.js"></script>
    <script src="/static/scripts/controllers/navController.js"></script>
    <script src="/static/scripts/controllers/postController.js"></script>
    <script src="/static/scripts/controllers/dashController.js"></script>

    <!-- Main CSS -->
    <link rel="stylesheet" type="text/css" href="/static/css/homeS.css">

</head>
<body ng-controller="navController">

<div ng-include="'/views/nav.ejs'"></div>

<div class="separator"></div>


<div class="container">
    <div class="row frontPageContent">
        <div class="modal fade" tabindex="-1" role="dialog" data-toggle="modal" data-target="#myModal" id="register">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Register with an Email</h4>
                    </div>
                    <div class="modal-body">
                        <!-- LOGIN FORM -->
                        <form action="/signup" method="post">
                            <div class="row">
                                <div class="col-md-1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="exampleInputName2" name="name" placeholder="Name">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1"><span class="glyphicon glyphicon-envelope registerIcon" aria-hidden="true" id="registerE"></span></div>
                                <div class="col-md-10">
                                    <div class="form-group">

                                        <input type="email" class="form-control" id="exampleInputEmail2" name="email" placeholder="E-mail">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-1"><span class="glyphicon glyphicon-lock registerIcon" aria-hidden="true" id="lock"></span></div>

                                <div class="col-md-10">
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="exampleInputName2" name="password" placeholder="Password">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-warning btn-lg btnSignUp">Signup</button>
                        </form>
                    </div>
                    <div>

                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="modal fade" tabindex="-1" role="dialog" data-toggle="modal" data-target="#myModal" id="signin">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Login</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="/login" method="post">

                                    <div class="row">
                                        <div class="col-md-1"><span class="glyphicon glyphicon-envelope registerIcon " aria-hidden="true" id="registerE"></span></div>
                                        <div class="col-md-10">
                                            <div class="form-group">

                                                <input type="email" class="form-control" id="exampleInputEmail2" name="email" placeholder="E-mail">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-1"><span class="glyphicon glyphicon-lock registerIcon" aria-hidden="true" id="lock"></span></div>

                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <input type="password" class="form-control" id="exampleInputName2" name="password" placeholder="Password">
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-warning btn-lg btnSignUp">LOGIN</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">

                        
                        <br>
                        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
                        <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>

                    </div>

                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="col-md-6 frontText">
            <p class="frontPageTitle">HomeSnippets</p>
            <p class="frontPageSubText">A new way to search and advertise places to rent</p>

            <form class="form-horizontal">

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 joinButton">
                        <a href="#" class="btn btn-default join" data-toggle="modal" data-target="#register">Join!</a>
                    </div>
                </div>
            </form>

        </div>

        <div class="col-md-6 phone">
            <img  alt="Brand" src="/static/images/phone.png" height="auto" width="300px">

        </div>
    </div>
</div>

</body>
</html>