                <img  alt="Parking" src="static/images/parking.png" height="auto" width="50px" id="parking">
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <span class="btn btn-primary">Rooms</span>  
            </div>
            <div class="col-sm-4">
                <span class="btn btn-primary">Pet friendly</span>
            </div>
            <div class="col-sm-4">
                <span class="btn btn-primary">Parking</span>
            </div>
        </div>

        <br><br><br>

        <div class="row">
            <div class="col-sm-4">
                <img  alt="Rooms" src="static/images/tv-internet.png" height="auto" width="50px" id="tv-internet">
            </div>

            <div class="col-sm-4">
                <img  alt="Pets" src="static/images/laundry.png" height="auto" width="50px" id="laundry">
            </div>

            <div class="col-sm-4">
                <img  alt="Parking" src="static/images/sofa.png" height="auto" width="50px" id="sofa">
            </div>
        </div>

         <div class="row">
            <div class="col-sm-4">
                <span class="btn btn-primary">TV & Internet</span>
            </div>
                <div class="col-sm-4">
                    <span class="btn btn-primary">Laundry</span>
                </div>
                    <div class="col-sm-4">
                        <span class="btn btn-primary">Furnished</span>
                    </div>
        </div><br><br>


     </div>

      <div class="modal-footer">
        <a><i class="fa fa-search fa-3x"></i></a>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
